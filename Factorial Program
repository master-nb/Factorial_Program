def fact():
    n = int(input("Enter the value"))
    if n<0:
        print("Negative numbers are not allowed")
    elif n==0 or n==1:
        print(f"Your factorial of {n} is 1")
    else:
        sum = 1 
        for i in range(1,n+1):
            sum *= i
        print(f'Your factorial of {n} is {sum} ')
        
fact()
